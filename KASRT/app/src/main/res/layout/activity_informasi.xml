<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".InformasiActivity"
    android:background="@color/light_cyan">

    <!-- Informasi yang ditampilkan -->
    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/infoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan informasi"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="4dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <!-- Template akan diganti secara dinamis di MainActivity -->
    </LinearLayout>

    <!-- Button untuk menambah informasi -->
    <Button
        android:id="@+id/addInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Informasi"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="onAddInfoClicked" />

</LinearLayout>
